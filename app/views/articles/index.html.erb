<h1>Articles</h1>
<% if user_signed_in? %>
  <%= button_to "New Article", new_article_path, {form_class: "inline", method: "get"} %>
<% end %>
<ul class="article-list">
  <% @articles.each do |article| %>
    <li>
      <span class="date"><%= article.created_date %></span><%= (user_signed_in? ? "[#{article.status}] " : "") %><%= link_to "#{article.title}", article %>
    </li>
  <% end %>
</ul>
