<%= link_to "< Back", articles_path %>
<article>
  <header>
    <h1><%= @article.title %>
      <div><%= @article.created_date %></div>
    </h1>
  </header>
  <p><%= @article.body %></p>
  <% if user_signed_in? %>
    <ul>
      <li><%= link_to "Edit", edit_article_path(@article) %></li>
      <li><%= link_to "Delete", article_path(@article), data: {turbo_method: :delete, turbo_config: "Are you sure?"} %></li>
    </ul>
  <% end %>
</article>
